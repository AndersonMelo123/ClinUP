<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/agendar_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:context=".activity.AgendarActivity">


        <Button
            android:id="@+id/bt_agendarID"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:text="@string/botao_agendar"
            android:theme="@style/botaoPadrao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_DataID"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/endereco"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/telefone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nome" />

        <TextView
            android:id="@+id/telefone"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/planoSaud"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endereco" />

        <TextView
            android:id="@+id/planoSaud"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/dataNascimento"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefone" />

        <TextView
            android:id="@+id/dataNascimento"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/planoSaud" />

        <TextView
            android:id="@+id/email"
            android:layout_width="322dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:background="#4d000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dataNascimento" />


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView2"
            android:layout_width="330dp"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/bt_agendarID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_DataID">

            <FrameLayout
                android:id="@+id/calendar1"
                android:layout_width="270dp"
                android:layout_height="0dp"
                android:layout_gravity="top|center"
                android:background="@color/White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>